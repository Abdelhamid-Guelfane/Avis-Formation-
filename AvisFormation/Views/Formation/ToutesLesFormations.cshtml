@model List<Formation>

@{
    ViewData["Title"] = "ToutesLesFormations";
}

<h3>Toutes Les Formations</h3>

    <div class="container my-3">

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Description</th>
                    <th scope="col">Nom Seo</th>
                    <th scope="col">Url</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var f in Model){
                <tr>
                    <th scope="row">@f.Nom</th>
                    <td>@f.Description</td>
                    <td>@f.NomSeo</td>
                    <td>@f.Url</td>
                    <td>
                        <a asp-action="Details" asp-route-nomSeo="@f.NomSeo" class="btn btn-outline-primary">Détails</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>



